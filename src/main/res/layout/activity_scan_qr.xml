<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1A1A"
    tools:context=".Main.ScanQRActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnBack_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:background="@drawable/btn_i_mypage"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btnScan"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="40dp"
            android:background="@drawable/btn_qr" />

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="결과 텍스트"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:visibility="invisible" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_margin="6dp"
        android:background="@drawable/qr_white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/qrImg"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@drawable/qr_iv"
            android:padding="20dp"
            android:layout_gravity="center_vertical" />

    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>