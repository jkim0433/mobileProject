<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/android_sma"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1A1A"
    android:padding="20dp"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="70dp"
        app:layout_constraintTop_toTopOf="@+id/android_sma">

        <ImageView
            android:id="@+id/gymfit_logo"
            android:layout_width="171dp"
            android:layout_height="131dp"
            android:background="@drawable/gymfit_logo_splash"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="112dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/constraintLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="left"
            android:text="이메일주소"
            android:padding="10dp"
            android:textColor="#E7E7E7"
            />

        <EditText
            android:id="@+id/loginEmail"
            android:layout_width="301dp"
            android:layout_height="50dp"
            android:background="@drawable/ed_gray"
            android:padding="10dp"
            android:autofillHints="emailAddress"
            android:textColor="#8B8B8B"
            android:hint="  이메일을 입력해주세요"
            android:textColorHint="#8B8B8B"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout1"
        tools:layout_editor_absoluteX="-39dp">

        <TextView
            android:id="@+id/tvTel"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:text="전화번호"
            android:padding="10dp"
            android:gravity="left"
            android:textColor="#E7E7E7"/>

        <EditText
            android:id="@+id/loginPW"
            android:layout_width="301dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ed_gray"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#8B8B8B"
            android:hint="  전화번호를 입력해주세요"
            android:autofillHints="password"
            android:textColorHint="#8B8B8B"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp">

        <Button
            android:id="@+id/login"
            android:layout_width="301dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_red"
            android:text="로그인"
            android:textColor="#E7E7E7" />


        <TextView
            android:id="@+id/join"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="#E7E7E7"
            android:gravity="right"
            android:padding="10dp"
            />

    </LinearLayout>


</LinearLayout>



