<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnCloseBottomSheet"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:layout_marginBottom="6dp"
        android:background="@drawable/btn_down_red"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <!--        android:id="@+id/tvBsText"-->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_left"
            android:text="D_BOARD"
            android:textColor="#CECECE"
            android:id="@+id/btnGoArticle"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_center"
            android:text="QR"
            android:textColor="#CECECE"
            android:id="@+id/bottomScan"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_right"
            android:text="MYPAGE"
            android:textColor="#CECECE"
            android:id="@+id/myPage"/>

    </LinearLayout>





